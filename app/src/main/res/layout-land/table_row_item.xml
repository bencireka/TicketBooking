<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/showDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:text="@string/show_date"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/lineraLayout"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/showDate"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/showLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_location"
            android:textSize="12sp" />
    </LinearLayout>


    <Button
        android:id="@+id/book_ticket"
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/lineraLayout"
        android:onClick="buy_ticket"
        android:text="@string/buy_ticket"
        android:textSize="12sp"
        app:cornerRadius="0dp"
        app:iconPadding="0dp" />
</LinearLayout>